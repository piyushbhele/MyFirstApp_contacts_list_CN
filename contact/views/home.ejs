<html>

    <head>
        <title>
            <%=title%>
        </title>
        <script src="https://kit.fontawesome.com/c20ba6815d.js" crossorigin="anonymous"></script>
        <link rel="stylesheet" href="./home.css" type="text/css">
    </head>

    <body>

        <h1 id="page-heading"> <i class="fa-regular fa-address-book"></i>
            <span>
                My contacts List
            </span>
        </h1>

        <div id="contact-list-container">
            <ul>
                <% for (let i of contact_list) {%>
                    <li class="contact">
                        <!-- <i class="fa-solid fa-square-poll-horizontal"></i> -->
                        <div class="details">

                            <p>
                                <%=i.name%>
                            </p>
                            <p>
                                <%= i.phone%>
                            </p>
                        </div>

                        <div class="delete-button">

                            <a href="/delete-contact/?id=<%=i._id%>">
                                <i class="fa-regular fa-trash-can"></i>
                            </a>
                        </div>

                    </li>
                    <%}%>
            </ul>
        </div>

        <form id="form" action="create-task" method="POST">
            <input type="text" name="name" placeholder="Enter name" required>
            <input type="number" name="phone" placeholder="Enter phone number" required>
            <button type="submit">Add Task</button>
        </form>

        <script type="text/javascript" src="./home.js"></script>
    </body>

</html>